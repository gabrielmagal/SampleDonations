@model SendDto

@{
    Layout = "_LayoutModal";
}

<h1>Efetuar envio doação</h1>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="IdProduct" class="control-label">IdProduct:</label>
        <input asp-for="IdProduct" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdUser" class="control-label">IdUser:</label>
        <input asp-for="IdUser" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantity:</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateTimeDonation" class="control-label">Data da doação:</label>
        <input asp-for="DateTimeDonation" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <input type="button" value="Cancelar" data-bs-dismiss="modal" class="btn btn-danger" />
    </div>
</form>
