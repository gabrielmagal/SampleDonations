@model SendDto

@{
    Layout = "_LayoutModal";
}

<h1>Efetuar envio doação</h1>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Receive.Id" class="control-label">Recebimento:</label>
        <select asp-for="Receive.Id" class="form-control">
            <option value="">Selecione um Recebimento</option>
            @foreach (var receive in Model.Receives)
            {
                <option value="@receive.Id">@receive.Name</option>
            }
        </select>
        <span asp-validation-for="Receive.Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Id" class="control-label">Recebimento:</label>
        <select asp-for="User.Id" class="form-control">
            <option value="">Selecione um Recebimento</option>
            @foreach (var receive in Model.Users)
            {
                <option value="@receive.Id">@receive.Name</option>
            }
        </select>
        <span asp-validation-for="User.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantity:</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateTimeDonation" class="control-label">Data da doação:</label>
        <input asp-for="DateTimeDonation" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <input type="button" value="Cancelar" data-bs-dismiss="modal" class="btn btn-danger" />
    </div>
</form>
