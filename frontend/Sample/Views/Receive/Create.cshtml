@model ReceiveDto

@{
    Layout = "_LayoutModal";
}

<h1>Adicionar Novo Alimento</h1>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TypeOfDonationEnum" class="control-label">Tipo de doação:</label>
        <select asp-for="TypeOfDonationEnum" class="form-control">
            @foreach (var item in Enum.GetValues(typeof(TypeOfDonationEnum)))
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantidade:</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Validity" class="control-label">Validade:</label>
        <input asp-for="Validity" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="User.Id" class="control-label">Usuário:</label>
        <select asp-for="User.Id" class="form-control">
            <option value="">Selecione um Usuário</option>
            @foreach (var receive in Model.Users)
            {
                <option value="@receive.Id">@receive.Name</option>
            }
        </select>
        <span asp-validation-for="User.Id" class="text-danger"></span>
    </div>

    <br />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <input type="button" value="Cancelar" data-bs-dismiss="modal" class="btn btn-danger" />
    </div>
</form>
